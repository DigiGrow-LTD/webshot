# Database
POSTGRES_PASSWORD=change_me_to_secure_password

# MinIO
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=change_me_to_secure_password

# MinIO public URL - used for presigned download URLs
# With nginx proxy, use the /files path: https://your-domain.com/files
# The nginx config routes /files/* to MinIO
MINIO_PUBLIC_URL=https://your-domain.com/files

# API Key - simple env vars (preferred for Coolify)
# If not set, falls back to config/api-keys.json file
API_KEY=sk_live_your_secret_key_here
API_KEY_NAME=Production
API_KEY_RATE_LIMIT=10/second
# API_KEY_ENABLED=true

# API Configuration (optional overrides)
# PORT=3000
# MAX_CONCURRENT_PAGES=3
# SCREENSHOT_TIMEOUT=30000
# CLEANUP_INTERVAL=3600000
# PRESIGNED_URL_EXPIRY=3600
